<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mazatron.mazatronsmartpump.PumpActivity"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mazlogopump"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="155dp"
            android:layout_marginLeft="155dp"
            android:src="@mipmap/ic_logo"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:text="SMART PUMP"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColorHighlight="@android:color/holo_blue_light"
            android:textAllCaps="true"
            android:textFontWeight="@android:integer/config_mediumAnimTime"
            android:fontFamily="sans-serif-black"
            />

        <Button
            android:id="@+id/pumpon"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:padding="10dp"
            android:elevation="20dp"
            android:translationZ="20dp"
            android:onClick="pumpon"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_green_light"
            android:text="@string/pumpon"
            android:drawableLeft="@android:drawable/ic_lock_power_off"
            />

        <Button
            android:id="@+id/pumpoff"
            android:drawableLeft="@android:drawable/ic_lock_power_off"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginLeft="120dp"
            android:padding="10dp"
            android:translationZ="20dp"
            android:elevation="20dp"
            android:textStyle="bold"
            android:onClick="pumpoff"
            android:textSize="25sp"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_red_light"
            android:text="@string/pumpoff" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        >

            <Button
                android:text="Light&#10;Alert"
                android:id="@+id/lightalert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="20dp"
                android:onClick="lightalert"
                android:background="@android:color/holo_blue_light"
                android:elevation="20dp"
                android:textColor="@android:color/white"
                android:translationZ="20dp"
                android:drawableBottom="@mipmap/ic_notify"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                />

            <Button
                android:id="@+id/pumpscheduler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:text="Pump&#10;Scheduler"
                android:elevation="20dp"
                android:textColor="@android:color/white"
                android:translationZ="20dp"
                android:background="@android:color/holo_blue_light"
                android:drawableBottom="@mipmap/ic_scheduler"
                android:onClick="pumpschedule"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                />

            <Button
                android:id="@+id/pumptimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:text="Pump&#10;Timer"
                android:elevation="20dp"
                android:textColor="@android:color/white"
                android:translationZ="20dp"
                android:background="@android:color/holo_blue_light"
                android:drawableBottom="@mipmap/ic_timer"
                android:onClick="pumptimer"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/resettimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="12sp"
        android:text="Reset Timer"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:background="@android:color/holo_blue_light"
        android:elevation="20dp"
        android:translationZ="20dp"
        android:clickable="true"
        android:focusable="true"
        />

</LinearLayout>